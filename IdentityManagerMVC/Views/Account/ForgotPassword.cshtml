@model ForgotPasswordViewModel

<h1 class="alert alert-info">ForgotPassword</h1>

<form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form">
    <h4>Enter your email to reset password</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email" class="col-md-4"></label>
        <div class="col-md-8">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>



    <div class="form-group mt-3">
        <div class="col-md-3">
            <button class="btn btn-secondary form-control" type="submit">Recover Password</button>
        </div>
    </div>
    <p>
        <a asp-action="Register">Register new user</a>

    </p>
    <p>
        <a asp-action="Login">Login</a>

    </p>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
